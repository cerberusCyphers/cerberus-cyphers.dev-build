@media screen and (min-width: 400px) {
	h1 {
		font-size: 2rem;
	}

	.about img {
		width: 18rem;
	}

	video {
		width: 350;
		height: 250;
		margin-top: 2rem;
		margin-left: 2rem;
	}

	.section-projects img {
		width: 18rem;
		padding-top: 1rem;
	}
}

@media screen and (min-width: 500px) {
	header {
		padding-left: 1rem;
	}

	header button {
		margin-left: 4.2rem;
	}

	video {
		padding-left: 0rem;
		width: 100%;
		height: auto;
	}
}
