/* // Extra small devices (portrait phones, less than 576px)
// No media query since this is the default in Bootstrap

// Small devices (landscape phones, 576px and up) */
@media (min-width: 576px) {
	header {
		height: 60vh;
	}

	h1 {
		margin-top: 5rem;
		font-size: 2.5rem;
	}

	body {
		font-size: 1.2rem;
	}

	.hidden {
		display: inline;
	}

	.hamburger {
		display: none;
	}

	.mobile-logo {
		display: none;
	}

	.main-logo {
		display: block;
		width: 100%;
		border-radius: 45%;
		height: auto;
		margin: 2%;
		background-color: black;
		box-shadow: 0 0 8px 8px rgba(26, 26, 26, 0.63) inset;
	}

	.nav {
		display: inline-block;
		text-align: right;
		margin-top: 0.8rem;
	}

	.nav li {
		font-size: 1rem;
		display: inline;
		padding-right: 0.5rem;
		background: none;
		border: none;
	}

	.mobile-nav {
		margin-top: 1rem;
		position: relative;
	}

	.mobile-nav li:hover,
	.mobile-nav li:active {
		color: rgb(129, 255, 2);
		border-bottom: 2px solid;
	}

	.hero-button {
		margin-right: 2rem;
	}

	.hero-box-btn {
		font-size: 1.1rem;
		width: 7em;
		height: 2.8em;
	}

	.secondary-btn {
		width: 6.5em;
		height: 2.5em;
	}
}

/* // Medium devices (tablets, 768px and up) */
@media (min-width: 768px) {
	header {
		height: 75vh;
	}

	h1 {
		font-size: 3.5rem;
	}

	body {
		font-size: 1.4rem;
	}

	.nav {
		margin-top: 1.2rem;
	}

	.nav li {
		font-size: 1.3rem;
	}

	.hero-button {
		margin-right: 3rem;
	}

	.hero-box-btn {
		font-size: 1.5rem;
		width: 8em;
		height: 3em;
	}

	.secondary-btn {
		font-size: 1.5rem;
		width: 7em;
		height: 2.8em;
	}

	.section-games {
		flex-direction: row;
	}

	.pig video {
		width: 83%;
		height: auto;
	}

	.guess video {
		width: 75%;
		height: auto;
	}
}

/* // Large devices (desktops, 992px and up) */
@media (min-width: 992px) {
	header {
		height: 100vh;
		background-size: cover;
	}

	h1 {
		margin-top: 8rem;
		font-size: 4rem;
	}

	body {
		font-size: 1.5rem;
	}

	.nav li {
		margin-left: 2.5rem;

		font-size: 1.6rem;
	}

	.hero-button {
		margin-right: 5rem;
	}
}

/* // Extra large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
	h1 {
		margin: 10rem;
	}

	.nav {
		margin-top: 1.8rem;
	}
	.nav li {
		margin-left: 4.6rem;
	}

	.hero-button {
		margin-right: 7rem;
	}
}
