/* // Extra small devices (portrait phones, less than 576px)
// No media query since this is the default in Bootstrap

// Small devices (landscape phones, 576px and up) */
@media (min-width: 576px) {
	header {
		height: 60vh;
	}

	h1 {
		margin-top: 5rem;
		font-size: 2.5rem;
	}

	.hidden {
		display: inline;
	}

	.hamburger {
		display: none;
	}

	.mobile-logo {
		display: none;
	}

	.main-logo {
		display: block;
		width: 100%;
		height: auto;
		margin: 2%;
		background-color: black;
	}

	.nav {
		display: inline;
	}

	.nav li {
		display: inline;
		margin-left: 1.65rem;
		background: none;
		border: none;
	}

	.mobile-nav {
		margin-top: 1rem;
	}

	.mobile-nav li:hover,
	.mobile-nav li:active {
		color: chartreuse;
		border-bottom: 2px solid;
	}

	.hero-box-btn {
		margin-left: 10rem;
	}
}

/* // Medium devices (tablets, 768px and up) */
@media (min-width: 768px) {
	header {
		height: 75vh;
	}

	h1 {
		font-size: 3.5rem;
	}

	.nav li {
		margin-left: 3.5rem;
	}

	.hero-box-btn {
		font-size: 1.5rem;
	}

	.secondary-btn {
		font-size: 1.4rem;
		width: 6em;
		height: 2.5em;
	}
}

/* // Large devices (desktops, 992px and up) */
@media (min-width: 992px) {
	header {
		height: 100vh;
		background-size: cover;
	}

	h1 {
		font-size: 4rem;
	}

	.nav li {
		margin-left: 5.5rem;
	}
}

/* // Extra large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
	.nav li {
		margin-left: 7.5rem;
	}
}
