* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

html {
	background-color: rgba(0, 0, 0, 0.801);
	font-family: 'Titillium Web';
	text-rendering: optimizeLegibility;
	scroll-behavior: smooth;
}

body {
	background-color: maroon;
}

h1 {
	color: #fff;
	font-size: 1.5rem;
	text-align: center;
}

h2 {
	color: azure;
}

.hidden {
	display: none;
}

a {
	color: chartreuse;
}

a:hover,
a:active {
	text-decoration: none;
}

/*-------------------------*/

/*---------HEADER----------*/

/*-------------------------*/

header {
	background-image: linear-gradient(
			rgba(0, 0, 0, 0.801),
			rgba(189, 31, 31, 0.795)
		),
		url('31eb47ca254e1077a865ffcee6367d24');
	background-size: contain;
	background-position: unset;
	background-repeat: no-repeat;
	background-attachment: fixed;
	height: 35vh;
}

.mobile-logo {
	width: 60px;
	border-radius: 50%;
	float: left;
	margin-right: 5%;
	margin-top: 4%;
}

.main-logo {
	display: none;
}

/*-------------------------*/

/*---------NAVIGATION------*/

/*-------------------------*/

/*---------MOBILE------*/

.nav {
	justify-content: flex-end;
}

.hamburger {
	background-color: chartreuse;
	border-radius: 40px;
	width: 50px;
	padding: 2px;
	margin-top: 3%;
	position: fixed;
	z-index: 9999;
}

.mobile-nav {
	margin-top: 4.5rem;
	font-weight: 600;
	position: fixed;
	z-index: 9999;
}

.mobile-nav li {
	align-content: right;
	padding: 2px;
	border: 2px solid chartreuse;
	background-color: rgba(128, 255, 0, 0.699);
	width: 5.5rem;
	text-transform: uppercase;
	list-style-type: none;
}

.mobile-nav a:link,
.mobile-nav a:visited {
	color: crimson;
}

.mobile-nav a:hover,
.mobile-nav a:active {
	color: chartreuse;
	text-decoration: none;
}

/* -------------------------------------------- */

/* -------------- BUTTONS --------------*/

/* --------------------------------------------*/

button {
	display: inline-block;
	border-radius: 200px;
	text-align: center;
	word-wrap: none;
	margin-top: 3rem;
	cursor: pointer;
}

.hero {
	display: flex;
	justify-content: space-around;
	align-items: center;
}

.hero-box-btn {
	color: rgba(27, 27, 27);
	background-color: chartreuse;
	font-size: 0.9rem;
	font-weight: 700;
	width: 8em;
	height: 3em;
}

.hero-box-btn:link,
.hero-box-btn:visited {
	font-weight: 300;
	text-decoration: none;
}

.sec-button {
}

.secondary-btn {
	color: chartreuse;
	background-color: rgba(27, 27, 27, 0.521);
	width: 6em;
	height: 2.5em;
}

/*-------------------------*/

/*---------ABOUT-----------*/

/*-------------------------*/

.about {
	color: azure;
	padding-bottom: 0.5rem;
}

/*-------------------------*/

/*---------GAMES-----------*/

/*-------------------------*/

.section-games {
	display: flex;
	flex-direction: column;
	background-color: rgb(184, 184, 184);
}

.section-games h2 {
	color: crimson;
}

.section-games video {
	width: 50%;
	height: auto;
}

.pig,
.guess {
	color: crimson;
	margin: 0.5rem;
	padding-top: 3rem;
}

/*-------------------------*/

/*---------PROJECTS--------*/

/*-------------------------*/

.section-projects {
	padding-bottom: 1rem;
	background-color: rgb(66, 66, 66);
}

.desc {
	color: mintcream;
	background-color: maroon;
	border-radius: 4%;
}

.tools {
	border-radius: 10%;
}

.html {
	background-color: red;
}

.css {
	background-color: rgb(0, 94, 255);
}

.js {
	background-color: yellow;
}

/*-------------------------*/

/*---------MAIL-LIST-------*/

/*-------------------------*/

#mc_embed_signup {
	background-image: linear-gradient(
			rgba(190, 91, 91, 0.801),
			rgba(190, 91, 91, 0.801)
		),
		url(91d69ead5ba445a6e3b04c7b64a46106);
	background-size: cover;
}

.email-button {
	background-color: #bebe5b;
	cursor: pointer;
}

/*-------------------------*/

/*---------FOOTER----------*/

/*-------------------------*/

footer {
	background-color: rgb(81, 81, 81);
}

footer a {
	color: rgb(159, 159, 159);
}

.social-media {
	float: right;
}

.social-media p {
	font-size: 0.25rem;
}
