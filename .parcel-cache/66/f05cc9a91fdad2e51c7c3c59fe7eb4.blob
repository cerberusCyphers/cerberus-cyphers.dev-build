* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

html {
	background-color: rgba(0, 0, 0, 0.801);
	font-family: 'Titillium Web';
	text-rendering: optimizeLegibility;
	scroll-behavior: smooth;
}

body {
	background-color: maroon;
}

h1 {
	color: #fff;
	font-size: 1.5rem;
	text-align: center;
}

h2 {
	color: azure;
}

.hidden {
	display: none;
}

/*-------------------------*/

/*---------HEADER----------*/

/*-------------------------*/

header {
	background-image: linear-gradient(
			rgba(0, 0, 0, 0.801),
			rgba(189, 31, 31, 0.795)
		),
		url('31eb47ca254e1077a865ffcee6367d24');
	background-size: contain;
	background-position: unset;
	background-repeat: no-repeat;
}

.logo {
	width: 60px;
	border-radius: 50%;
	float: right;
	margin-right: 5%;
	margin-top: 4%;
}

/*-------------------------*/

/*---------NAVIGATION------*/

/*-------------------------*/

.hamburger {
	float: left;
	background-color: chartreuse;
	border-radius: 40px;
	width: 50px;
	padding: 2px;
	margin-left: 1rem;
	margin-top: 1%;
	position: fixed;
	z-index: 9999;
}

.main-nav {
	margin-top: 4.1em;
	margin-left: 1em;
	color: black;
	font-weight: 600;
	position: fixed;
	z-index: 9999;
}

.main-nav li {
	color: crimson;
	align-content: right;
	padding-top: 0.2em;
	padding-left: 0.4em;
	border: 2px solid chartreuse;
	background-color: rgba(128, 255, 0, 0.699);
	width: 5.5rem;
	text-transform: uppercase;
	list-style-type: none;
}

/* -------------------------------------------- */

/* -------------- BUTTONS --------------*/

/* --------------------------------------------*/

button {
	display: inline-block;
	border-radius: 200px;
	text-align: center;
	word-wrap: none;
	margin-left: 12%;
	margin-top: 1rem;
}

.hero-box-btn {
	color: rgba(27, 27, 27);
	background-color: rgba(128, 255, 0, 0.521);
	font-size: 0.8rem;
	font-weight: 600;
	width: 8em;
	height: 3em;
}

.hero-box-btn:link,
.hero-box-btn:visited s {
	display: inline-block;
	font-weight: 300;
	text-decoration: none;
}

.secondary-btn {
	color: chartreuse;
	background-color: rgba(27, 27, 27, 0.521);
	width: 6em;
	height: 2.5em;
}

