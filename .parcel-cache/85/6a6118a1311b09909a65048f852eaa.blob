/* // Extra small devices (portrait phones, less than 576px)
// No media query since this is the default in Bootstrap

// Small devices (landscape phones, 576px and up) */
@media (min-width: 576px) {
	header {
		height: 60vh;
	}

	h1 {
		margin-top: 5rem;
		font-size: 2.5rem;
	}

	body {
		font-size: 1.2rem;
	}

	.hidden {
		display: inline;
	}

	.hamburger {
		display: none;
	}

	.mobile-logo {
		display: none;
	}

	.main-logo {
		display: block;
		width: 100%;
		border-radius: 4px;
		height: auto;
		margin: 2%;
		background-color: black;
		box-shadow: 0 0 8px 8px rgba(26, 26, 26, 0.63) inset;
	}

	.nav {
		display: inline;
		justify-content: right;
	}

	.nav li {
		font-size: 1rem;
		display: inline;
		margin-left: 1rem;
		background: none;
		border: none;
	}

	.mobile-nav {
		margin-top: 1rem;
		position: relative;
	}

	.mobile-nav li:hover,
	.mobile-nav li:active {
		color: chartreuse;
		border-bottom: 2px solid;
	}

	.hero-box-btn {
		font-size: 1.1rem;
	}
}

/* // Medium devices (tablets, 768px and up) */
@media (min-width: 768px) {
	header {
		height: 75vh;
	}

	h1 {
		font-size: 3.5rem;
	}

	body {
		font-size: 1.4rem;
	}

	.nav li {
		margin-left: 0.6rem;
		font-size: 1.3rem;
	}

	.hero-box-btn {
		font-size: 1.5rem;
	}

	.secondary-btn {
		font-size: 1.5rem;
	}

	.section-games {
		flex-direction: row;
	}

	.guess video {
		width: 75%;
		height: auto;
	}
}

/* // Large devices (desktops, 992px and up) */
@media (min-width: 992px) {
	header {
		height: 100vh;
		background-size: cover;
	}

	h1 {
		font-size: 4rem;
	}

	body {
		font-size: 1.5rem;
	}

	.nav li {
		margin-left: 2.5rem;

		font-size: 1.6rem;
	}
}

/* // Extra large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
	.nav li {
		margin-left: 4.6rem;
	}
}

